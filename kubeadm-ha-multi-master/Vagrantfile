# -*- mode: ruby -*-
# vi: set ft=ruby :

ENV['VAGRANT_NO_PARALLEL'] = 'yes'

Vagrant.configure(2) do |config|

  config.vm.provider "vmware_workstation"
  config.vm.provision "shell", path: "bootstrap.sh"

  # Load Balancer Node
  config.vm.define "loadbalancer" do |lb|
    lb.vm.box = "bento/ubuntu-20.04"
    lb.vm.hostname = "loadbalancer.ornek.com"
    lb.vm.network "private_network", ip: "3.3.3.100"
    lb.vm.provider "vmware_workstation" do |v|
      v.vmx["displayname"] = "loadbalancer"
      v.vmx["memsize"] = 1024
      v.vmx["numvcpus"] = 1
    end
  end

  MasterCount = 2

  # Kubernetes Master Nodes
  (1..MasterCount).each do |i|
    config.vm.define "kmaster#{i}" do |masternode|
      masternode.vm.box = "bento/ubuntu-20.04"
      masternode.vm.hostname = "kmaster#{i}.ornek.com"
      masternode.vm.network "private_network", ip: "3.3.3.10#{i}"
      masternode.vm.provider "vmware_workstation" do |v|
        v.vmx["displayname"] = "kmaster#{i}"
        v.vmx["memsize"] = 2048
        v.vmx["numvcpus"] = 2
      end
    end
  end

  NodeCount = 1

  # Kubernetes Worker Nodes
  (1..NodeCount).each do |i|
    config.vm.define "kworker#{i}" do |workernode|
      workernode.vm.box = "bento/ubuntu-20.04"
      workernode.vm.hostname = "kworker#{i}.ornek.com"
      workernode.vm.network "private_network", ip: "3.3.3.20#{i}"
      workernode.vm.provider "vmware_workstation" do |v|
        v.vmx["displayname"] = "kworker#{i}"
        v.vmx["memsize"] = 1024
        v.vmx["numvcpus"] = 1
      end
    end
  end

end
